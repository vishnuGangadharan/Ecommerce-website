<%- include("../partials/admin/header") %>
<%- include("../partials/admin/side") %>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body" style="width: 80%;">
        <h4 class="card-title">All Categorys</h4>
        <!-- <p class="card-description">
          Add class <code>.table-striped</code>
        </p> -->
        <div class="table-responsive">
          <% if (categories.length) { %>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>No</th>
                <th>Image</th>
                <th>Category Name</th>
                <th>Discription</th>
                <th>offer Amount</th>
                <th>Status</th>
                <th>Action</th>
                <th>Edit</th>
              </tr>
            </thead>
            <tbody>
             <% categories.forEach((category,i) => { %>
  
              <tr>
                  <td><%= i+1 %></td>
  
                  <td>
                    <img src="data:<%= category.image.contentType%>; base64,<%= category.image.data.toString('base64')%>" alt="<%= category.categoryName %> Image" style="width: 50px; height: 50px;">
  
                  </td>
  
                  <td><%= category.categoryName%></td>
                  <td><%= category.description.substring(0, 30) + '...'%></td>
                <%  if(category.offer){ %>
                    <td><%=category.offer%></td>
                <%  }else{ %>
                    <td>0</td>
              <%  } %>
                  
                  <%  if(category.is_desable==true){ %>
                  <td>
                    <p class="text-danger">Desabled</p>
                  
                    <!-- <a href="/admin/Category/<%= category._id %>/Delete" class="btn btn-danger" >Delete</i></a>  -->
                  </td>
                  <td>
                    <a href="/admin/product/unable/<%=category._id%>" class="btn btn-success"> Enable</a>
                  </td>
                 
                 <% }else{%>
                  <td>
                    <p class="text-success">Enable</p>
                  </td>
                  <td>
                    <a href="/admin/product/desable/<%=category._id%>" class="btn btn-danger"> Desabled</a>
                  </td>
                  <% } %>
                  <td>
                    <a href="/admin/category/editCategory/<%=category._id%>" class="btn btn-success">Edit </a>
                  </td>
              </tr>
              <%  })  %>
  
             
                
            </tbody>
          </table>
          <% } else { %>
            <p>NO Categories</p>
      <%  }  %>
        </div>
      </div>
    </div>
  </div>
  
  
  <footer class="footer">
    <div class="d-sm-flex justify-content-center justify-content-sm-between">
      <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright Â© 2021.  Premium <a href="https://www.bootstrapdash.com/" target="_blank">Bootstrap admin template</a> from BootstrapDash. All rights reserved.</span>
      <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Hand-crafted & made with <i class="ti-heart text-danger ml-1"></i></span>
    </div>
  </footer>

  <%-include("../partials/admin/footer")%>