<%- include("../partials/admin/header") %>
<%- include("../partials/admin/side") %>


<div class="col-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body" style="margin: 40px;">
      <h3 class="card-title"> Add Product</h3>
      <!-- <p class="card-description">
        Basic form elements
      </p> -->
      <form class="forms-sample" method="post" action="/admin/product/addproduct" enctype="multipart/form-data" style="width: 70%;">
        <% if(message !== ""){ %>
          <p class="text-danger"><%= message %></p>
        <% } %>

        <div class="form-group">
          <label for="exampleInputName1">Product Name</label>
          <input type="text" name="productName" class="form-control" id="exampleInputName1" placeholder="Name" required>
        </div>

        <div class="form-group">
          <label for="exampleInputEmail3">Brand name</label>
          <input type="text" name="brandName" class="form-control" id="exampleInputEmail3" placeholder="Brand" required>
        </div>

         <!-- Product Categories and Tags -->
         <div class="col-md-12 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">Product Categories</h4>
              <div class="form-group">
                <label for="category">Category</label>
                <select class="form-control form-control-lg " name="category" id="category">
                    
                  <% Categories.forEach((category) => { %>
                    <option><%= category.categoryName %></option>
                   <% }) %>
                </select>
              </div>
            </div>
          </div>
        </div>

        <div class="form-group">
          <label for="exampleInputPassword4">Price</label>
          <input type="number" name="price" class="form-control" id="exampleInputPassword4" placeholder="price" required>
        </div>

       

          <div class="form-group">
            <label>Images Upload (Required: 3)</label>
            <div class="input-group col-md-12">
              <input type="file" id="images" multiple  name="image" class="form-control file-upload-info" required>
            </div>
          </div>

        <div class="form-group">
          <label for="exampleInputCity1">Stock Count</label>
          <input type="number" name="stockCount" class="form-control" id="exampleInputCity1" placeholder="Count" required>
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea class=" form-control" id="description" name="description" rows="8" placeholder="Write about the Product" required></textarea>
        </div>

        <!-- <div class="col-md-12 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <h5 class="card-description text-white">Availability</h5>
              <div class="form-check">
                <input type="checkbox" class="form-check-input" name="inStock" id="inStockRadio" value="inStock">
                <label class="form-check-label" for="inStockRadio">In Stock</label>
              </div>
              <div class="form-check">
                <input type="checkbox" class="form-check-input" name="outOfStock" id="inStockRadio" value="outOfStock">
                <label class="form-check-label" for="outOfStockRadio">Out Of Stock</label>
              </div>
            </div>
          </div>
        </div> -->

        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <button type="reset" class="btn btn-light">Cancel</button>
      </form>
    </div>
  </div>
</div>

