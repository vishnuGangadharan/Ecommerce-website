<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP Verification</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <!-- Google Fonts - Poppins -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
        }

        .box {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            padding: 30px;
            max-width: 400px;
            margin: 0 auto;
            margin-top: 50px;
        }

        h3 {
            font-weight: 600;
            margin-bottom: 20px;
        }

        label {
            font-weight: 500;
        }

        .login-btn {
            background-color: #007BFF;
            color: #fff;
            font-weight: 600;
            border: none;
        }

        .login-btn:hover {
            background-color: #0056b3;
        }
    </style>

    <!-- Custom JavaScript -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Set the initial time in seconds (5 minutes)
            let timer = 60;

            // Retrieve the timer value from localStorage if available
            const storedTimer = localStorage.getItem('otpTimer');
            if (storedTimer) {
                timer = parseInt(storedTimer);
            }

            // Function to update the timer
            function updateTimer() {
                const minutes = Math.floor(timer / 60);
                const seconds = timer % 60;
                document.getElementById('timer').innerText = `${minutes}:${seconds < 10 ? '0' : ''}${seconds}`;
            }

            // Function to decrement the timer every second
            function decrementTimer() {
                if (timer > 0) {
                    timer--;
                    localStorage.setItem('otpTimer', timer);
                    updateTimer();
                } else {
                    clearInterval(interval);
                    alert('OTP has expired. Please request a new one.');
                }
            }

            // Initial update
            updateTimer();

            // Start the timer interval
            const interval = setInterval(decrementTimer, 1000);
        });
    </script>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 box">
                <form action="/verifyOTPForgetPass" method="post">
                    <h3 class="text-center">Forget Password OTP Verification</h3>

                    <div class="form-group">
                        <label for="otp">Enter OTP (Time Left: <span id="timer"></span>)</label>
                        <input type="text" class="form-control" placeholder="Enter OTP" id="otp" name="otp">
                        <input type="hidden" name="userId" value="<%= userId %>">
                    </div>

                    <button class="btn btn-primary btn-block login-btn" type="submit">Verify</button>
                </form>

                <div style="margin-top: 10px; text-align: center;">
                    <% if(typeof message !== "undefined") { %>
                        <span style="color:#f00; font-weight: bold;"><%= message %></span>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS --> 
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
