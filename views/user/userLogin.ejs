<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        input.form-control.form-control-lg {
            width: 70%; /* Adjust the width as needed */
            height: 20px; /* Adjust the height as needed */
        }
    </style>
    
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body>
    <section class="vh-100" style="background-color:#fff;">
        <div class="container py-1 h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
              <div class="card" style="border-radius: 1rem;">
                <div class="row g-0" style="height: 500px;">
                  <div class="col-md-6 col-lg-5 d-none d-md-block">
                    <img src="/images/bg-1.jpg"
                      alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem; height: 500px;" />
                  </div>
                  <div class="col-md-6 col-lg-7 d-flex align-items-center " style="height: 452px ;">
                    <div class="card-body p-2 p-lg-5 text-black">
                        <% if (typeof message !="undefined" ) {%>

                            <p class="mt-3 text-info ">
                                <%= message %>
                            </p>
                    
                            <%} %>
      
                      <form id="form" action="/userlogin" method="post" >
      
                        <div class="d-flex align-items-center mb-2 pb-1">
                          <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                          <span class="h1 fw-bold mb-0">fashion</span>
                        </div>
      
                        <h5 class="fw-normal mb-2 pb-2" style="letter-spacing: 1px;">Sign into your account</h5>
      
                        <div class="form-outline mb-2">
                          <input type="email" name="email" id="email" class="form-control form-control-lg" />
                          <label class="form-label" for="form2Example17">Email address</label>
                          <p class="text-danger mb-1" id="email-error-message" ></p> 
                        </div>
      
                        <div class="form-outline mb-2">
                          <input type="password" id="password" name="password" class="form-control form-control-lg" />
                          <label class="form-label" for="form2Example27">Password</label>
                          <div class=" text-danger mb-1" id="password-error-message"></div>
                        </div>
      
                        <div class="pt-1 mb-2">
                          <button class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
                        </div>
      
                        <a class="small text-muted" href="/forgetPassword">Forgot password?</a>
                        <p class="mb-2 pb-lg-2" style="color: #393f81;">Don't have an account? <a href="/register"
                            style="color: #393f81;">Register here</a></p>
                        <!-- <a href="#!" class="small text-muted">Terms of use.</a>
                        <a href="#!" class="small text-muted">Privacy policy</a> -->
                      </form>
      
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>

